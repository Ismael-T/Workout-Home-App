<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/l_mariner_blue"
    android:orientation="vertical"
    tools:context=".WorkoutSets">

    <TextView
        android:id="@+id/workoutSetsTv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="24dp"
        android:text="Workouts at Home"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.117"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/workoutSetsTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="12dp"
        android:text="no equipments needed..."
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/workoutSetsTv1"
        app:layout_constraintTop_toBottomOf="@+id/workoutSetsTv1"
        tools:ignore="HardcodedText" />


    <androidx.cardview.widget.CardView
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="30sp"        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutSetsTv2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/light"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/lightWorkout"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:gravity="center"
            android:lineSpacingExtra="12dp"
            android:text="Light Workout Set\n3 min"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/frame2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="24dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="30sp"
        app:layout_constraintBottom_toTopOf="@+id/frame3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/moderate"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/moderateWorkout"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:gravity="center"
            android:lineSpacingExtra="12dp"
            android:text="Moderate Workout Set\n5 min"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/frame3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="48dp"
        android:elevation="10dp"
        android:orientation="horizontal"
        app:cardCornerRadius="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/intense"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/intenseWorkout"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/round"
            android:gravity="center"
            android:lineSpacingExtra="12dp"
            android:text="Intense Workout Set\n8 min"
            android:textColor="@color/white"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>